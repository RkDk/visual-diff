html 
    header 
        title Visual Diff 
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
    link(rel="stylesheet" href="/styles/style.css")
body 
    div(class="container-fluid" class="top-padding-10")
        form 
            div(class="row" class="bottom-padding-10")
                div(class="col")
                    div(class="form-check")
                        input(class="form-check-input" type="checkbox" value="" id="convertSpacesToTabsInput" onClick="onConvertSpaceToggle(event);")
                        label(class="form-check-label" for="convertSpacesToTabsInput")  Convert spaces to tabs
                        div(class="padding-indent" id="inputSpacesForm" oninput="onInputSpacesChange()")
                            label(for="minSpacesInput" class="num-spaces-label") Number of spaces
                            input(class="form-control" class="num-spaces-input" type="number" min=2 max=6 id="minSpacesInput")
                div(class="col-sm text-right align-self-center")
                    input(type="button" id="diffButton" class="btn btn-primary" onclick="setEditMode();" value="Edit")
                    input(type="button" id="editButton" class="btn btn-primary" onclick="getDiffApiData();" value="Diff")
            div(id="input-mode")
                div(class="row")
                    div(class="col-sm")
                        textarea(class="w-100 h-100" rows=20 id="lBody") 
                            | Old data goes here
                    div(class="col-sm")
                        textarea(class="w-100 h-100" rows=20 id="rBody") 
                            | New data goes here
            div(id="diff-mode")
                div(class="row")
                    div(class="col-sm l-diff" id="lDiff") 
                    div(class="col-sm r-diff" id="rDiff" ) 

    script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
